<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/product_background_shape"
    android:orientation="vertical"
    tools:context=".Ui.Activities.ProdectDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/base_toolbar"
                layout="@layout/base_toolbar" />

            <include
                android:id="@+id/galley"
                layout="@layout/custom_images_product_review_layout" />

            <include
                android:id="@+id/info"
                layout="@layout/custom_info_product_review_layout" />

            <include
                android:id="@+id/rv_reviews"
                layout="@layout/custom_rv_product_reviews_layout" />

            <include
                android:id="@+id/contact"
                layout="@layout/custom_contact_product_review_layout" />

            <include
                android:id="@+id/rv_related_products"
                layout="@layout/custom_rv_related_products_review_layout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>