<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:background="@color/transparent_black_hex_2"
    android:orientation="horizontal"
    android:weightSum="5"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            tools:ignore="NestedWeights,UselessParent">

            <ImageView
                android:id="@+id/imv_product_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_categories"
                tools:ignore="ContentDescription" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            tools:ignore="NestedWeights,UselessParent">

            <ImageView
                android:id="@+id/imv_product_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="5dp"
                android:background="@drawable/ic_categories"
                tools:ignore="ContentDescription" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            tools:ignore="NestedWeights,UselessParent">

            <ImageView
                android:id="@+id/imv_product_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="5dp"
                android:background="@drawable/ic_categories"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/imv_product_main"
            android:layout_width="180dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/ic_favorite"
            android:elevation="5dp"
            tools:ignore="ContentDescription" />
    </FrameLayout>

</LinearLayout>